@model Model.EF.SinhVien

@{
    ViewBag.Title = "DoiMatKhau";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h5 style="text-decoration:underline;color:blue; margin-left:10%">Đổi mật khẩu</h5>
    <hr />
</div>


<div style="text-align:center">
    @using (Html.BeginForm("DoiMatKhau", "SVTaiKhoan", FormMethod.Post))
    {
        <div style="color:red;margin:auto">
            @Html.ValidationSummary(true, "", "error")
        </div>

        <table class="table">
            <tr>
                <td></td>
                <td class="mot"><i class="fa fa-user" aria-hidden="true"></i><span style="margin-right:18px"> Email: </span></td>
                <td><input type="text" id="Email" name="Email" value="@Session["Email"]" readonly class="form-control" /></td>
                <td></td>
            </tr>
            <tr>
                <td></td>
                <td class="mot"><i class="fa fa-envelope" aria-hidden="true"></i> Mật khẩu mới:</td>
                <td>@Html.PasswordFor(model => model.MaKhau, new { @class = "form-control" })</td>
                <td></td>
            </tr>
            <tr>
                <td></td>
                <td class="mot"><i class="fa fa-envelope" aria-hidden="true"></i> Mật khẩu mới:</td>
                <td><input type="password" id="nhaplai" name="nhaplai" class="form-control"/></td>
                <td></td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td><input type="submit" value="Hoàn thành" class="btn btn-danger" /></td>
                <td></td>
                <td></td>
            </tr>
        </table>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                
            </div>
        </div>
    }
</div>
<style>
    .table tr td{
        border-top:none;
    }
    .table tr td{
        width:5%;
    }
    .mot{
        text-align:right;
    }
</style>
