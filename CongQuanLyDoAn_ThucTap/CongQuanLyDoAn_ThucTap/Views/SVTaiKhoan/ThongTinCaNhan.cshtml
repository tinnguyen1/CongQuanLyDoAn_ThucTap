@model IEnumerable<Model.EF.SinhVien>

@{
    ViewBag.Title = "ThongTinCaNhan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h5 style="text-decoration:underline;color:blue; margin-left:10%">Thông tin cá nhân</h5>
    <hr />
</div>

<table class="table">
    <tr>
        <th>
            Mã Sinh viên
        </th>
        <th>
            Tên sinh viên
        </th>
        <th>
            Ngày sinh
        </th>
        <th>
            Giới tính
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Email
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaSV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenSV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgaySinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GioiTinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SDT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaSV })
            </td>
        </tr>
    }

</table>

<style>
    .table tr th {
        background-color: darkturquoise;
    }
</style>